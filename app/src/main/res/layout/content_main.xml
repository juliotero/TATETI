<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".SegundaActividad"
    android:clickable="true"
    android:background="#b687637c">


    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/A1"
        android:background="#87fef5"
        android:layout_alignBottom="@+id/A2"
        android:layout_toStartOf="@+id/A2"
        android:layout_marginRight="5dp" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/A2"
        android:background="#87fef5"
        android:layout_above="@+id/B2"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="false"
        android:layout_marginBottom="5dp" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/A3"
        android:background="#87fef5"
        android:layout_alignTop="@+id/A2"
        android:layout_toEndOf="@+id/A2"
        android:layout_marginLeft="5dp" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/B1"
        android:background="#87fef5"
        android:layout_marginRight="5dp"
        android:layout_alignTop="@+id/B2"
        android:layout_toStartOf="@+id/B2" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/B2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="#83fff5"
        android:layout_marginBottom="5dp" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/B3"
        android:background="#87fef5"
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/B2" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/C1"
        android:background="#87fef5"
        android:layout_marginRight="5dp"
        android:layout_alignBottom="@+id/C2"
        android:layout_toStartOf="@+id/C2" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/C2"
        android:background="#86fff6"
        android:layout_below="@+id/B2"
        android:layout_alignStart="@+id/B2"
        android:layout_alignParentEnd="false" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/C3"
        android:background="#87fef5"
        android:layout_marginLeft="5dp"
        android:layout_alignBottom="@+id/C2"
        android:layout_toEndOf="@+id/C2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nueva"
        android:id="@+id/button"
        android:background="#ffffff"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:textColor="#b687637c"
        android:layout_below="@+id/C1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/salir"
        android:id="@+id/salir"
        android:background="#ffffff"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:textColor="#b687637c"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:id="@+id/titulo"
        android:textColor="#000000"
        android:textSize="30sp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="114dp"
        android:layout_height="28dp"
        android:id="@+id/music2"
        android:layout_gravity="right|top"
        android:background="#b687637c"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textColor="#e7d6d6" />

</RelativeLayout>
